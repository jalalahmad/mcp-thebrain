{
  "name": "thebrain",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node -P tsconfig.dev.json src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:e2e": "jest --config=jest.config.e2e.js --detectOpenHandles",
    "test:integration": "jest --testMatch='**/*.test.ts' --testPathIgnorePatterns='e2e'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:thought-operations": "jest src/thebrain/__tests__/thought-operations.test.ts",
    "test:link-operations": "jest src/thebrain/__tests__/link-operations.test.ts",
    "test:search-operations": "jest src/thebrain/__tests__/search-operations.test.ts",
    "test:utility-operations": "jest src/thebrain/__tests__/utility-operations.test.ts",
    "test:resources": "jest src/capabilities/__tests__/resources.test.ts",
    "docker:build": "docker build -t thebrain-mcp:latest .",
    "docker:build-dev": "docker build -f Dockerfile.dev -t thebrain-mcp:dev .",
    "docker:run": "docker run -it --rm thebrain-mcp:latest",
    "docker:run-dev": "docker run -it --rm -v $(pwd)/src:/app/src thebrain-mcp:dev",
    "docker:compose-up": "docker-compose up",
    "docker:compose-down": "docker-compose down",
    "docker:compose-build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "example:stdio": "tsx examples/transport-example.ts stdio",
    "example:http": "tsx examples/transport-example.ts http",
    "example:docker": "tsx examples/transport-example.ts docker",
    "example:dev": "tsx examples/transport-example.ts dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.3",
    "@types/node": "^22.15.18",
    "@types/uuid": "^10.0.0",
    "axios": "^1.9.0",
    "axios-mock-adapter": "^2.1.0",
    "express": "^5.1.0",
    "thebrain-api": "^0.0.1",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/axios": "^0.9.36",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.3",
    "ts-node": "^10.9.2"
  }
}